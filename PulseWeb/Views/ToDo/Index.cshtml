@model IEnumerable<ToDoItem>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>ToDo</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ToDo" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-square"></i> &nbsp; New Item
            </a>
        </div>
    </div>
    <br />
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    ToDo Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Due Date
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Title
                    </td>
                    <td width="25%">
                        @obj.Description
                    </td>
                    <td width="10%">
                        @obj.DueDate
                    </td>
                    <td width="5%">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="@obj.Id">
                            <label class="form-check-label" asp-for="@obj.IsDone"></label>
                        </div>
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-info"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>